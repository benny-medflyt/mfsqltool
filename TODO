[ ] insert DSL
      insertOne(conn, "employee",
          {
              fname: sql`${"alice"}`,
              lname: sql`fname || ${"johnson"}`
          }, sql`RETURNING id`);

      insertMany(conn, "employee",
          [{
              id: sql`${}`,
              fname: sql`${}`,
              lname: sql`${fname} || fname`
          }], sql`RETURNING id`);
