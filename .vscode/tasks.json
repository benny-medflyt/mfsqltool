{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "mfsqlchecker",
            "type": "shell",
            "command": "node ./build/mfsqlchecker/main.js -p demo/ -m migrations/ -c demo/unique_table_column_types.json --format vscode --watch",
            "isBackground": true,
            "problemMatcher": {
                "owner": "mfsqlchecker",
                "fileLocation": "relative",
                "background": {
                    "activeOnStart": false,
                    "beginsPattern": "\\[DIAGNOSTICS START\\]",
                    "endsPattern": "\\[DIAGNOSTICS END\\]"
                },
                "pattern": {
                    "regexp": "^\\[DIAGNOSTIC\\] ([^\\s]*) \\(([^()]*)\\) \\(([^()]*)\\) (.*)$",
                    "file": 1,
                    "severity": 2,
                    "location": 3,
                    "message": 4
                }
            }
        }
    ]
}